---
import Section from "../Section.astro";

import { languages } from "@cv";

---

<Section className={Astro.props.className} title="Languages">
    <ul class="list-none space-y-1 text-sm text-skin-base">
        {languages.map((languages) => {
            return (
                <li>
                    <div class="font-bold text-base mb-1">{languages.language}</div>
                    {languages.fluency && languages.fluency.length > 0 && (
                        <div class="text-skin-muted text-sm ml-2">{languages.fluency}</div>
                    )}
                </li>
            );
        })}
    </ul>
</Section>